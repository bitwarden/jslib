{
  "compilerOptions": {
    "pretty": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "spec"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
